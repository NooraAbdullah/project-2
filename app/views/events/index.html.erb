<div class = event >
<p id="notice"><%= notice %></p>

<h1 class = "header" >Events</h1>

<table class="table" >
  <thead class="thead-dark">
    <tr class="firstRow">
      <th>Date</th>
      <th>Decorator</th>
      <th>Venue</th>
      <th>Type</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr class="rows">
        <td><%= event.date %></td> 
        <td><%= event.decorator.name %></td>
        <td><%= event.venue.name %></td> 
        <td><%= event.type_of %></td>
        <td class="showDest"><%= link_to 'Show', event %></td>
        <td class="showDest"><%= link_to 'Destroy', event, method: :delete,  data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class = "buttonHolder">
<button class = " headers " ><%= link_to 'New Event', new_event_path %> </button>


<button class = " headers " ><%= link_to 'Home', root_path%></button>
</div>
</div>
</div>