<p id="notice"><%= notice %></p>

<h1 class=" header">Venues</h1>

<table class="table">
  <thead class="thead-dark">
    <tr class="firstRow">
      <th>Name</th>
      <th>City</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% @venues.each do |venue| %>
      <tr class="rows">
        <td class="rows"><%= venue.name %></td> 
        <td class="rows"><%= venue.city %></td>
        <td class="rows"><%= venue.price %></td>
        <td class="showDest" ><%= link_to 'More info', venue, :class => "header" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>
<div class = "back btn btn-secondary"><%= link_to 'Back', root_path,:class => "header" %> </div>
